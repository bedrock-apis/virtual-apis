{
   "name": "@bedrock-apis/virtual-apis",
   "version": "1.0.0",
   "license": "Apache-2.0",
   "author": "bedrock-apis",
   "type": "module",
   "exports": {
      ".": {
         "default": "./dist/index.js",
         "types": "./dist/src/api-builder/index.d.ts"
      },
      "./package.json": "./package.json",
      "./modules/*": "./modules/*",
      "./plugins/*": {
         "default": "./dist/plugins/*.js",
         "types": "./dist/src/core-plugins/*.d.ts"
      },
      "./loader": "./dist/loader.js",
      "./eslint-plugin": "./eslint-plugin.js",
      "./vitest": {
         "default": "./dist/vitest.js",
         "types": "./dist/src/loader/vitest.d.ts"
      }
   },
   "scripts": {
      "bundle": "rolldown -c && pnpm run typesgen",
      "packagegen": "node directories.js regenerate && rolldown -c && exitzero pnpm run typesgen && node --enable-source-maps ./dist/package-builder.js",
      "typesgen": "tsc --pretty --project tsconfig.build.json",
      "typecheck": "tsc --pretty --noEmit",
      "test": "vitest",
      "coverage": "vitest --ui --coverage",
      "lint": "eslint",
      "example:custom-bds-software": "cd examples/custom-bds-software && pnpm run start",
      "example:custom-bds-software-ts": "cd examples/custom-bds-software-ts && pnpm run start",
      "example:vitest": "cd examples/vitest && pnpm run start",
      "examples": "pnpm run '/^example:.*/'",
      "check": "pnpm typecheck && pnpm lint && pnpm test && pnpm packagegen && pnpm examples"
   },
   "prettier": {
      "arrowParens": "avoid",
      "endOfLine": "crlf",
      "plugins": [
         "prettier-plugin-jsdoc"
      ],
      "printWidth": 120,
      "quoteProps": "consistent",
      "singleQuote": true,
      "tabWidth": 3
   },
   "dependencies": {
      "@minecraft/server": "1.16.0",
      "chalk": "^5.4.1",
      "deepmerge": "^4.3.1"
   },
   "devDependencies": {
      "@types/node": "^22.10.1",
      "@vitest/coverage-istanbul": "2.1.8",
      "@vitest/ui": "2.1.8",
      "eslint": "^9.16.0",
      "exitzero": "^1.0.1",
      "prettier": "^3.4.2",
      "prettier-plugin-jsdoc": "^1.3.0",
      "rolldown": "1.0.0-beta.1",
      "rollup": "^4.29.1",
      "tsx": "^4.19.2",
      "typescript": "5.7.2",
      "typescript-eslint": "^8.17.0",
      "vitest": "^2.1.8"
   },
   "packageManager": "pnpm@9.14.4+sha512.c8180b3fbe4e4bca02c94234717896b5529740a6cbadf19fa78254270403ea2f27d4e1d46a08a0f56c89b63dc8ebfd3ee53326da720273794e6200fcf0d184ab",
   "engines": {
      "node": ">=20.x.x"
   }
}