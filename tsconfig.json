{
   "compilerOptions": {
      "target": "esnext",
      "lib": ["ESNext"],
      "module": "ESNext",
      "moduleResolution": "bundler",
      "resolveJsonModule": true,
      "outDir": "dist",
      "allowJs": true,
      "checkJs": true,
      "noEmit": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "noUncheckedIndexedAccess": true,
      "skipLibCheck": true,

      "noImplicitOverride": true
   },
   "include": ["./packages/**/*.ts", "./libs/**/*.ts", "./tools/**/*.ts", "*.config.ts"]
}
