{
   "compilerOptions": {
      "target": "ES2024",
      "lib": [
         "ES2024"
      ],
      "module": "ESNext",
      "moduleResolution": "bundler",
      "resolveJsonModule": true,
      "outDir": "dist",
      "baseUrl": ".",
      "allowJs": true,
      "checkJs": true,
      "noEmit": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "noUncheckedIndexedAccess": true,
      "skipLibCheck": true
   },
   "include": [
      "./packages/**/*.ts",
      "./libs/**/*.ts",
      "./tools/**/*.ts",
      "*.config.ts",
      "bds-docs"
   ]
}