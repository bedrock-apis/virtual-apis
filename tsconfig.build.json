{
   "compilerOptions": {
      /* Language and Environment */
      "target": "es2022",
      "lib": ["ES2022"],

      /* Modules */
      "module": "ESNext",
      "rootDir": ".",
      "moduleResolution": "bundler",
      "resolveJsonModule": true,

      /* Emit */
      "declaration": true,
      "emitDeclarationOnly": true,
      "outDir": "./dist",

      /* Interop Constraints */
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,

      /* Type Checking */
      "strict": true,
      "noUncheckedIndexedAccess": true,
      "skipLibCheck": true
   },
   "include": ["src/api-builder/", "src/loader/", "src/core-plugins/", "src/plugin-api/"],
   "exclude": ["./dist/", "./modules/", "**/*.test.ts"]
}
